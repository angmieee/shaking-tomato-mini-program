/* pages/news/news-detail.wxss */
.detail-image{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: flex-end;
}

.news-share{
  background-color: rgba(255, 255, 255, 0.5);
  width: 40rpx;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  margin: 0 30rpx 30rpx 0;
  position: relative;
}

.news-share>image{
  width: 40rpx;
  height: 40rpx;
}

.news-share>button{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  border-radius: 50%;
  opacity: 0;
}

.author-image{
  width: 80rpx;
  height: 80rpx;
}

.author-info{
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.author-info>text:not(:first-child){
  margin-left: 15rpx;
}

.author{
  font-size: 36rpx;
  font-weight: bold;
  color: #2b2b2b;
}

.title{
  padding: 0 20rpx 20rpx;
  margin: 0 0 20rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  font-weight: bold;
  color: #2b2b2b;
}

.public-date{
  font-size: 28rpx;
  color: #8b8b8b;
}

.content{
  padding: 0 20rpx 30rpx;
  font-size: 28rpx;
  color: #2b2b2b;
}