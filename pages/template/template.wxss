.author-image{
  width: 80rpx;
  height: 80rpx;
}

.item-head{
  display: flex;
  align-items: center;
}

.item-head>text:not(:first-child){
  margin-left: 15rpx;
}

.author{
  font-size: 36rpx;
  font-weight: bold;
  color: #2b2b2b;
}

.public-date{
  font-size: 28rpx;
  color: #8b8b8b;
}

.news-item{
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: white; 
  display: flex;
  flex-direction: column;
}

.item-title{
  font-size: 28rpx;
  color: #2b2b2b;
}

.news-image{
  margin: 15rpx 0;
  width: 100%;
  height: 350rpx;
}

.description{
  font-size: 28rpx;
  color: #2b2b2b;
}

.movie-rating text{
  padding: 0 10rpx;
  color: rgba(145, 141, 141, 0.5)
}

.movie-rating image{
  width: 30rpx;
  height: 30rpx;
}

.movie-rating {
  display: flex;
  align-items: center;
}

.movie-item-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie-item-container .movie-item-image{
  width: 210rpx;
  height: 300rpx;
}

.movie-item-title{
  width: 210rpx;
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.loading{
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #8a8a8a;
}

.loading image{
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  animation: loading 0.8s infinite linear;
}

@keyframes loading{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}
